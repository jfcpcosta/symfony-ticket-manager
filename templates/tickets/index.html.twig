{% extends 'base.html.twig' %}

{% block title %}Pendent Tickets{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">{{ title }}</h5>
        </div>

        <div class="card-body">
            <ul class="list-group">
                {% if tickets|length == 0 %}
                    <li class="list-group-item">No tickets pendent</li>
                {% endif %}

                {% for ticket in tickets %}
                    <a href="/tickets/{{ ticket.id }}" class="list-group-item list-group-item-action list-group-item-{{ ticket.getSeverityClass }}">
                        {{ ticket.title }}
                    </a>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
